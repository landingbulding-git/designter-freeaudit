{
  "name": "designter-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "apps/landing-pages/*",
    "packages/*"
  ],
  "scripts": {
    "build:main": "cd apps/main-website && npm run build",
    "build:landing": "cd apps/landing-pages/landing-ingyenes-audit && npm run build",
    "build:all": "npm run build:main && npm run build:landing && npm run merge:outputs",
    "merge:outputs": "node scripts/merge-outputs.js"
  },
  "devDependencies": {
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
